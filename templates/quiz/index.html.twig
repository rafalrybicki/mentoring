{% extends 'base.html.twig' %}

{% block title %}Quiz index{% endblock %}

{% block body %}
    <h1 class="text-center">Quizes</h1>

    {% for quiz in quizzes %}
        <div class="row justify-content-md-center">
            <p class="col-6">
                {{ quiz.name }}
            </p>
        
            <div class="col-3">
                <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-primary btn-sm">Show</a>
                <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-success btn-sm">Edit</a>
                {{ include('quiz/_delete_form.html.twig') }}
            </div>
        </div>
    {% else %}
        <p>
            no records found
        </p>
    {% endfor %}

    <a href="{{ path('app_quiz_new') }}">Create new</a>
{% endblock %}
